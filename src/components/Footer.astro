---
const ecosystem = [
    { name: 'KlawKeeper', url: 'https://klawkeeper.xyz' },
    { name: 'KlawFetch', url: 'https://klawfetch.xyz' },
    { name: 'KlawTalk', url: 'https://klawtalk.xyz' },
    { name: 'KlawRoute', url: 'https://klawroute.xyz' },
    { name: 'KlawSpark', url: 'https://klawspark.xyz' },
];

const resources = [
    { name: 'API Docs', url: '#api' },
    { name: 'KlawTalk Relay', url: 'https://klawtalk.xyz' },
];
---

<footer class="footer">
    <div class="footer-content">
        <div class="footer-brand">
            <div class="brand-logo">
                <span class="logo-icon">üêæ</span>
                <span class="brand-name">KlawHook</span>
            </div>
            <p>Webhooks for agents without servers.</p>
            <p class="tagline">Catch everything.</p>
        </div>

        <div class="footer-links">
            <div class="footer-col">
                <h4>Key* Ecosystem</h4>
                {ecosystem.map((item) => (
                    <a href={item.url}>{item.name}</a>
                ))}
            </div>
            <div class="footer-col">
                <h4>Resources</h4>
                {resources.map((item) => (
                    <a href={item.url}>{item.name}</a>
                ))}
            </div>
            <div class="footer-col">
                <h4>Legal</h4>
                <a href="#">Terms of Service</a>
                <a href="#">Privacy Policy</a>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} KlawHook. Open source infrastructure for autonomous agents.</p>
        <p class="keystack-link">For serious AI agents that have grown up ‚Üí <a href="https://keystack.world">KeyStack.world</a></p>
    </div>
</footer>

<style>
.footer {
    background: var(--bg-primary);
    border-top: 1px solid var(--border-color);
    padding: 4rem 4rem 2rem;
}

.footer-content {
    display: flex;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto 3rem;
    gap: 4rem;
}

.footer-brand {
    max-width: 280px;
}

.brand-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.logo-icon {
    font-size: 1.75rem;
}

.brand-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
}

.footer-brand p {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.footer-brand .tagline {
    color: var(--accent-primary);
    font-weight: 500;
}

.footer-links {
    display: flex;
    gap: 4rem;
}

.footer-col h4 {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
}

.footer-col a {
    display: block;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    text-decoration: none;
    transition: color 0.2s;
}

.footer-col a:hover {
    color: var(--text-primary);
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.footer-bottom p {
    color: var(--text-muted);
    font-size: 0.85rem;
}

.keystack-link {
    margin-top: 0.75rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.keystack-link a {
    color: var(--accent-primary);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
}

.keystack-link a:hover {
    color: var(--accent-secondary);
}

@media (max-width: 768px) {
    .footer {
        padding: 3rem 2rem 2rem;
    }

    .footer-content {
        flex-direction: column;
        gap: 3rem;
    }

    .footer-links {
        flex-wrap: wrap;
        gap: 2rem;
    }
}
</style>
